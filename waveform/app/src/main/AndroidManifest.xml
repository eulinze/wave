        <!--<activity android:name=".activity.bluetooth2.BTClient">-->
        <!--</activity>-->
        <!--<activity android:name=".activity.bluetooth2.BTClientTest">-->
        <!--</activity>-->
        <!--<service android:name=".service.BluetoothLeService" android:enabled="true"/>-->


        <uses-library android:name="org.apache.http.legacy" android:required="false" />
        <activity android:name=".activity.presswave.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.ylz.waveform.authlogin.SetPasswordActivity" />
        <activity android:name="com.ylz.waveform.authlogin.ModifyPasswordActivity" />
        <activity android:name="com.ylz.waveform.authlogin.BindPhoneNumberActivity" />
        <activity android:name="com.ylz.waveform.authlogin.LoginActivity" />
        <activity android:name=".activity.presswave.MainActivity"
            android:theme="@style/AppTheme.NavigateView">
            <intent-filter>
                <action android:name="com.ylz.waveform.login.loginSuccess" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- 注册SDKActivity -->
        <activity
            android:name="com.tencent.tauth.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="tencent1109934186" /> <!-- 开放平台获取的APPID -->
            </intent-filter>
        </activity>
        <activity
            android:name="com.tencent.connect.common.AssistActivity"
            android:configChanges="orientation|keyboardHidden"
            android:screenOrientation="behind"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
    </application>

</manifest>